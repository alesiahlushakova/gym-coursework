<div class="ui styled fluid accordion">
  {{#each goals.goals}}
    <div class="active title">
      <i class="dropdown icon"></i>
      {{date}}
      <div style="float:right; padding-right:2em">
        <div class="ui blue tag label">{{status}}</div>
      </div>
    </div>
    <div class="content">
      <table class="ui celled table">
        <thead>
          <tr>
            <th> Weight </th> <th> Chest </th> <th> Thigh </th>
            <th> Upper Arm </th> <th> Waist </th> <th> Hips </th>
            <th> Description </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> {{weight}}   </td><td> {{chest}} </td><td> {{thigh}} </td>
            <td> {{upperArm}} </td><td> {{waist}} </td><td> {{hips}}  </td>
            <td> {{description}} </td>
            <td>
              <a href="/goals/deleteGoal/{{../user.id}}/{{id}}" class="ui icon button">
              <i class="icon trash"></i>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {{/each}}
</div>