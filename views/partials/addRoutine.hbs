<section class="ui modal" id="addProgramme"> <i class="close icon"></i>
  <header class="header">Add Routine</header>
  <div class="content">
    <form class="ui segment form" action="/fitness/addroutine" method="POST">
      <div class="two fields">
        <div class="field">
          <label>Routine Name</label>
          <div class="ui input left icon">
            <i class="table icon"></i>
            <input placeholder="Routine Name" type="text" name="name">
          </div>
        </div>
        <div class="field">
          <label>Image Url</label>
          <div class="ui input left icon">
            <i class="image icon"></i>
            <input placeholder="Image Url" type="text" name="image">
          </div>
        </div>
      </div>
      <div class="field">
        <label>Description</label>
        <textarea placeholder="Description" name="description" rows="2"></textarea>
      </div>
      <button class="ui blue submit button"><i class="plus icon"></i> Add Routine </button>
      <div class="ui error message"></div>
    </form>
  </div>
</section>

<script>
  $('.ui.form')
    .form({
      fields: {
        name: {
          identifier: 'name',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter a routine name'
            }
          ]
        },
        description: {
          identifier: 'description',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter a routine description'
            }
          ]
        }
      }
    })
  ;
</script>